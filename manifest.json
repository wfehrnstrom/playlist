{
  "manifest_version": 2,
  "name": "PSequencer",
  "version": "0.0.1",
  "description": "Chain, save, and share sequences of pages that you visit. All available for your later perusal.",
  "permissions": ["storage", "activeTab", "tabs"],
  "background": {
    "persistent": false,
    "scripts": ["./js/background.js"]
  },
  "browser_action": {
    "default_title": "PSequencer",
    "default_icon": {
			"16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
		},
    "default_popup": "./html/popup.html"
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  }
}
